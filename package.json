{
  "name": "node-express-boilerplate",
  "version": "1.0.0",
  "description": "This is a Node.js boilerplate project with TypeScript, Express.js, and MongoDB database configuration. It also includes linting, formatting, and git hooks for code quality and consistency. The project includes a simple health check route to ensure the server is running correctly.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:files\" \"npm run serve\"",
    "watch:ts": "tsc --watch",
    "watch:files": "npm run copy-files -- --watch",
    "serve": "nodemon dist/index.js",
    "build": "npm run clean && npm run lint && npm run format && npm run copy-files && tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "copy-files": "copyfiles -u 1 \"src/templates/**/*\" dist/",
    "prepare": "husky install",
    "generate:module": "ts-node src/common/utils/cli.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bablu22/node-express-boilerplate.git"
  },
  "keywords": [
    "Node",
    "Express",
    "MongoDB",
    "TypeScript"
  ],
  "author": "Bablu Mia",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bablu22/node-express-boilerplate/issues"
  },
  "homepage": "https://github.com/bablu22/node-express-boilerplate#readme",
  "dependencies": {
    "@types/http-status": "^0.2.30",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.30.1",
    "chalk": "^4.1.2",
    "concurrently": "^9.1.0",
    "cookie-parser": "^1.4.7",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "http-status": "^2.0.0",
    "inquirer": "^12.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mongoose": "^8.8.3",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "qrcode": "^1.5.4",
    "rimraf": "^6.0.1",
    "speakeasy": "^2.0.0",
    "tslib": "^2.8.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "_moduleAliases": {
    "@": "dist",
    "@config": "dist/config",
    "@database": "dist/database",
    "@common": "dist/common",
    "@routes": "dist/routes",
    "@middlewares": "dist/middlewares",
    "@modules": "dist/modules"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
