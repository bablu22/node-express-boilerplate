{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@common/*": ["common/*"],
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"],
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"],
      "@docs/*": ["docs/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env", "src/types/global.d.ts"],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests"]
}
